<tr>
  <td>
    <img src=<%= line_item.product.image.tiny %> />
  </td>
  <td class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
    <%= line_item.product.name %>
  </td>
  <td class="product-desc">
    <%= line_item.product.description %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td class="product-amount">
    <%= number_to_currency((line_item.total_price_cents/100), :preciison => 2) %>
  </td>
</tr>